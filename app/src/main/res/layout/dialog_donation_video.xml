<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="313dp"
    android:layout_height="551dp"
    android:layout_gravity="center"
    android:orientation="vertical">


    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="511dp"
        app:corner_radius="20dp"
        >

        <View
            android:layout_width="match_parent"
            android:background="@color/orange_btn"
            android:layout_height="match_parent"/>

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/DDV_video_view_EPV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:use_controller="false" />


        <ImageView
            android:id="@+id/DDV_play_btn_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/round_play" />

    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/DDV_skip_btn_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="sans-serif"
android:textStyle="normal"
            android:text="@string/skip"
            android:textColor="@color/color_white"
            android:textSize="18sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/arrow_white" />


    </LinearLayout>


</RelativeLayout>