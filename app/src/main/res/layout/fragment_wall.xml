<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jabrutouch_background"
    android:orientation="vertical"
    android:weightSum="505"
    tools:context=".ui.main.wall_screen.WallFragment">


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="33.41"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/WF_welcome_TV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="73.43"
        android:fontFamily="sans-serif"
android:textStyle="normal"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:text="@string/welcome_to_the_new"
        android:textColor="@color/bottom_nevi_blue"
        android:textSize="21dp"
        android:visibility="visible"
        app:autoSizeTextType="uniform" />


    <View
        android:id="@+id/WF_welcome_TV_view"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20.32"/>


    <ImageView
        android:layout_gravity="center"
        android:id="@+id/WF_welcome_IV"
        android:layout_width="242.83dp"
        android:layout_height="0dp"
        android:layout_weight="195.93"
        android:background="@drawable/ic_main"
        android:visibility="visible" />


    <View
        android:id="@+id/WF_welcome_IV_view2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        android:layout_weight="30.38"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="18dp"
        android:layout_weight="109"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="18dp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif"
android:textStyle="normal"
            android:maxLines="1"
            android:text="@string/todays_daf"
            android:textColor="@color/bottom_nevi_blue"
            android:textSize="14sp"
            app:autoSizeTextType="uniform"
            tools:ignore="NestedWeights" />


        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_weight="2.8"
            android:background="@drawable/rounded_shadow"
            android:orientation="vertical"
            app:corner_radius="17dp">


            <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:corner_radius="17dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/WF_left_box"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/WF_today_daf_TV"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
android:textStyle="normal"
                            android:gravity="bottom"
                            android:maxLines="1"
                            android:textColor="@color/sign_in_color"
                            android:textSize="19sp"
                            app:autoSizeTextType="uniform" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/WF_today_date_TV"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginBottom="12dp"
                            android:layout_weight="0.6"
                            android:fontFamily="sans-serif"
android:textStyle="normal"
                            android:maxLines="1"
                            android:textColor="@color/grayIndicator"
                            android:textSize="12sp"
                            app:autoSizeTextType="uniform" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="end"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/WF_audio_icon_IV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_audio_selector" />

                        <ImageView
                            android:id="@+id/WF_video_icon_IV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_video_selector" />

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.099">

                    <ProgressBar
                        android:id="@+id/WF_progressbar"
                        style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:progress="0"
                        android:progressDrawable="@drawable/custom_progress_bar" />


                </RelativeLayout>


            </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


    </LinearLayout>


    <View
        android:id="@+id/WF_daf_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_weight="62.53"/>


    <LinearLayout
        android:id="@+id/WF_recent_gemara_LL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="109"
        android:orientation="vertical"
        android:visibility="gone"

        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.8"
            android:fontFamily="sans-serif"
android:textStyle="normal"
            android:maxLines="1"
            android:text="@string/recent_gmara"
            android:textColor="@color/bottom_nevi_blue"
            android:textSize="14sp"
            app:autoSizeTextType="uniform"
            tools:ignore="NestedWeights" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/WF_recycler_gmara_RV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_weight="3.5"

            >


        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>



    <View
        android:id="@+id/WF_recent_gemara_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_weight="40.44"/>


    <LinearLayout
        android:id="@+id/WF_recent_mishna_LL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="109"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.8"
            android:fontFamily="sans-serif"
android:textStyle="normal"
            android:maxLines="1"
            android:text="@string/recenr_mishna"
            android:textColor="@color/bottom_nevi_blue"
            android:textSize="14sp"
            app:autoSizeTextType="uniform"
            tools:ignore="NestedWeights" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/WF_recycler_mishna_RV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_weight="3.5">


        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="53.45"/>


</LinearLayout>