<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jabrutouch_background"
    android:orientation="vertical"
    android:weightSum="595"
    tools:context=".ui.main.donation_screen.DonationPaymentFragment">


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="43.39" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="78">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10.92dp"
            android:layout_toStartOf="@+id/DPF_relative_for_edittext"
            android:background="@drawable/dolar_icon" />


        <RelativeLayout
            android:id="@+id/DPF_relative_for_edittext"
            android:layout_width="200dp"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_edittext_top_shadow_padding_payment"
            android:paddingTop="10dp"
            android:layout_height="match_parent">

                <co.il.jabrutouch.ui.main.donation_screen.CustomEditText3
                    android:id="@+id/DPF_money_edit_text_ET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="57sp"
                    android:imeOptions="actionDone"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    tools:text="654"
                    android:inputType="number"
                    android:textColor="@color/bottom_nevi_blue"
                    android:maxLength="3"
                    android:background="@android:color/transparent"
                    />

        </RelativeLayout>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.4" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="24.2">

        <TextView
            android:id="@+id/DPF_mountly_text_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif"
android:textStyle="normal"
            android:maxLines="1"
            android:text="@string/monthly"
            android:textColor="@color/bottom_nevi_blue"
            android:textSize="21sp"
            app:autoSizeTextType="uniform" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="39.13" />


    <SeekBar
        android:id="@+id/DPF_seek_bar_SB"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="32.17"
        android:maxHeight="10dp"
        android:progress="50"
        android:progressDrawable="@drawable/custom_seekbar_bar_for_payment"
        android:thumb="@drawable/custom_blue_thumb" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="52.76" />


    <LinearLayout
        android:layout_width="286dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="52"
        android:background="@drawable/rounded_shadow_payment">


        <Button
            android:id="@+id/DPF_sub_btn_BTN"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/blue_button"
            android:fontFamily="sans-serif"
android:textStyle="bold"
            android:text="@string/Subscription"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/DPF_single_btn_BTN"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_button"
            android:fontFamily="sans-serif"
android:textStyle="normal"
            android:text="@string/Single_payment"
            android:textAllCaps="false"
            android:textColor="@color/color_blue_gray"
            android:textSize="15sp" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="38.34" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="51dp"
        android:layout_weight="96.48">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/jabru_icon_transparent" />

            <TextView
                android:id="@+id/DPF_ketarim_num_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
android:textStyle="bold"
                android:textColor="@color/bottom_nevi_blue"
                android:textSize="24sp"
                tools:text="9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
android:textStyle="normal"
                android:textColor="@color/profile_color"
                android:text="@string/ketarim"
                android:textSize="12sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DPF_donation_value_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
android:textStyle="normal"
                android:text="@string/value"
                android:textColor="@color/orange_btn"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/DFP_payment_text_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif"
android:textStyle="bold"
                android:text="@string/paid_monthly"
                android:textColor="@color/bottom_nevi_blue"
                android:textSize="21sp" />


            <TextView
                android:id="@+id/DPF_eligeble_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/profile_color"
                android:text="@string/eligeable_for_sub"
                android:textSize="13sp" />


        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15.52" />


    <TextView
        android:id="@+id/DPF_cancel_TV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="17"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/profile_color"
        android:text="@string/cancel_subs"
        app:autoSizeTextType="uniform" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18.38" />


    <RelativeLayout
        android:id="@+id/DPF_continue_btn_RL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/blue_button_rounded"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_weight="56">


        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:textSize="19sp"
                android:layout_centerInParent="true"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
android:textStyle="bold"
                android:text="@string/continu"/>


            <Button
                android:visibility="gone"
                android:id="@+id/DPF_continue_btn_BTN"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:gravity="end|center_vertical"
                android:paddingEnd="55dp"
                android:fontFamily="sans-serif"
android:textStyle="bold"
                android:textColor="@color/color_white"
                android:textSize="19sp" />

    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14.62" />


</LinearLayout>