<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jabrutouch_background"
    android:orientation="vertical"
    tools:context=".ui.main.mishna_screen.MishnaMainFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/GDF_nested_NSV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:orientation="vertical"
            >


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/GDF_recycler_RV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="23dp" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



    <LinearLayout
        android:id="@+id/GDF_image_LL"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout
            android:weightSum="438.27"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="visible">


            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="99.48"/>

            <ImageView
                android:layout_width="199.57dp"
                android:layout_height="0dp"
                android:layout_weight="147.5"
                android:background="@drawable/ic_no_downloads" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="31.94"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="73.43"
                android:gravity="center"
                android:textSize="21sp"
                android:text="@string/no_download" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15.98"/>


            <Button
                android:id="@+id/GDF_view_all_BTN"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_weight="48.08"
                android:background="@drawable/button_rounded_white"
                android:text="@string/View_all"
                android:textColor="@color/tab_color"
                android:textSize="15sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="28.04"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>