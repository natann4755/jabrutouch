<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="20dp"
    android:background="@color/jabrutouch_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="19dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_marginBottom="7dp">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="6dp"
                android:layout_centerInParent="true"
                android:background="@drawable/team_icon_new">

            </ImageView>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="4dp"
                android:background="@drawable/orange_microphone"/>

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:gravity="start">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_shadow_team_blue"
                >


                <LinearLayout
                    android:layout_marginStart="13dp"
                    android:id="@+id/SB_LL"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/MUIA_play_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_play22" />

                    <SeekBar
                        android:layout_marginStart="5dp"
                        android:id="@+id/MUIA_seekbar_SB"
                        android:layout_marginEnd="2dp"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="40dp"
                        android:maxHeight="5dp"
                        android:progressDrawable="@drawable/custom_seekbar_bar_for_record"
                        android:thumb="@drawable/custom_thumb" />



                    <TextView
                        android:id="@+id/MUAI_audio_time_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        tools:text="00:15"
                        android:gravity="center"
                        android:textColor="@color/bottom_nevi_blue"
                        android:layout_marginEnd="10dp"
                        android:textSize="11sp"
                        />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3.7dp"
                    android:background="@drawable/ic_pointer_white"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="7dp"/>

            </LinearLayout>

        </RelativeLayout>


        <ProgressBar
            android:id="@+id/MUAI_progress_bar_PB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/jabrutouch_blue"
            android:maxHeight="50dp"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:maxWidth="50dp"
            android:visibility="visible"

            />


    </LinearLayout>


    <TextView
        android:id="@+id/MUAI_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textSize="12sp"
        android:layout_marginStart="70dp"
        tools:text="Read 16:26" />


</LinearLayout>