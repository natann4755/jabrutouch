<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jabrutouch_background"
    android:fillViewport="true">


    <ProgressBar
        android:id="@+id/VCF_progress_bar_PB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/jabrutouch_blue"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:visibility="gone"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".ui.sign_in.SignInActivity"
        tools:ignore="UselessParent">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="17.6dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
android:textStyle="bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/verification_code"
            android:textColor="@color/sign_in_color"
            android:textSize="28sp"
            app:autoSizeTextType="uniform" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="32.19dp"
            android:layout_marginEnd="32.19dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
android:textStyle="normal"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="@string/enter_the"
            android:textColor="@color/sign_in_color"
            android:textSize="15sp"
            app:autoSizeTextType="uniform" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/VCF_phone_number_TV"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:fontFamily="sans-serif"
android:textStyle="normal"
            android:maxLines="1"
            android:textColor="@color/orange_btn"
            android:textSize="20sp"
            app:autoSizeTextType="uniform" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:layout_weight="5.5"
            android:gravity="center"
            android:orientation="horizontal">


            <co.il.jabrutouch.ui.sign_up.fragments.CustomEditText
                android:id="@+id/VCF_first_pin_ET"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/dote"
                android:cursorVisible="false"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/orange_btn"
                android:textSize="44sp" />


            <co.il.jabrutouch.ui.sign_up.fragments.CustomEditText
                android:id="@+id/VCF_second_pin_ET"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/dote"
                android:cursorVisible="false"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/orange_btn"
                android:textSize="44sp" />


            <co.il.jabrutouch.ui.sign_up.fragments.CustomEditText
                android:id="@+id/VCF_third_pin_ET"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/dote"
                android:cursorVisible="false"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/orange_btn"
                android:textSize="44sp" />


            <co.il.jabrutouch.ui.sign_up.fragments.CustomEditText
                android:id="@+id/VCF_fourth_pin_ET"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/dote"
                android:cursorVisible="false"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/orange_btn"
                android:textSize="44sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/VCF_didnt_code_LL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
android:textStyle="normal"
                    android:maxLines="1"
                    android:text="@string/didnt_get"
                    android:textColor="@color/jabrutouch_blue"
                    android:textSize="15sp"
                    app:autoSizeTextType="uniform" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/VCF_send_again_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="7dp"
                    android:fontFamily="sans-serif"
android:textStyle="normal"
                    android:maxLines="1"
                    android:text="@string/send_again"
                    android:textColor="@color/jabrutouch_blue"
                    android:textSize="15sp"
                    app:autoSizeTextType="uniform" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/VCF_register_by_mail_ACTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
android:textStyle="normal"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/regÃ­strate_por"
                    android:textColor="@color/jabrutouch_blue"
                    android:textSize="15sp"
                    app:autoSizeTextType="uniform" />


            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/VCF_wait_LL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="visible"
            android:layout_weight="0.8">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/VCF_wait_seconds_ACTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
android:textStyle="normal"
                android:maxLines="2"
                android:text="@string/please_wait"
                android:gravity="center"
                android:textColor="@color/orange_btn"
                android:textSize="15sp"
                app:autoSizeTextType="uniform" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

    </LinearLayout>


</RelativeLayout>