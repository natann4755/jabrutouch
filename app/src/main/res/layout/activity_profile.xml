<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jabrutouch_background"
    android:fillViewport="true"
    tools:context=".ui.main.profile_screen.ProfileActivity">


    <RelativeLayout
        android:id="@+id/PA_all_screnn_RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/jabrutouch_background">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/PA_user_image_CIV"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-15dp"
                android:background="@drawable/custom_profile"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/PA_User_name_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="36dp"
                    android:fontFamily="sans-serif"
android:textStyle="bold"
                    android:gravity="center"
                    android:maxLines="1"
                    tools:text="David Deutsch"
                    android:textColor="@color/profile_color"
                    android:textSize="28sp"
                    app:autoSizeTextType="uniform" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/PA_User_mail_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
android:textStyle="bold"
                    android:maxLines="1"
                    android:textColor="@color/profile_color"
                    android:textSize="16sp"
                    app:autoSizeTextType="uniform"
                    tools:ignore="Suspicious0dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/PA_location_image_IV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_location"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/PA_User_location_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orange_btn"
                        tools:text="israel"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                         />

                    <!--                <androidx.appcompat.widget.AppCompatTextView-->
                    <!--                    android:id="@+id/PA_User_location_TV"-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:fontFamily="sans-serif"
android:textStyle="bold"-->
                    <!--                    android:maxLines="1"-->
                    <!--                    android:layout_gravity="bottom"-->
                    <!--                    android:textColor="@color/orange_btn"-->
                    <!--                    android:textSize="16sp"-->
                    <!--                    app:autoSizeTextType="uniform" />-->


                </LinearLayout>


                <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/rounded_shadow"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.6"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/PA_lesson_donated_TV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="7dp"
                                android:fontFamily="sans-serif"
android:textStyle="bold"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/profile_color"
                                android:textSize="31sp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
android:textStyle="normal"
                                android:lines="2"
                                android:text="@string/Lessons_donated">


                            </TextView>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/PA_lesson_donate_count_TV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="7dp"
                                android:fontFamily="sans-serif"
android:textStyle="bold"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/profile_color"
                                android:textSize="31sp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
android:textStyle="normal"
                                android:lines="2"
                                android:text="@string/Lessons_Learned">


                            </TextView>


                        </LinearLayout>


                    </LinearLayout>


                    <Button
                        android:id="@+id/PA_donate_btn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_button_rounded"
                        android:text="@string/Donate_lessons"
                        android:textColor="@color/color_white"
                        android:textSize="15sp" />


                </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:text="@string/profile_comp"
                        android:textColor="@color/profile_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/PA_profile_precent_TV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:gravity="end"
                        android:text="50% Full"
                        android:textColor="@color/profile_color"
                        android:textSize="15sp" />


                </LinearLayout>


                <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="11dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="35dp"
                    app:corner_radius="17dp">

                    <ProgressBar
                        android:id="@+id/PA_progressbar"
                        style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:progress="50"
                        android:progressDrawable="@drawable/custom_progress_bar" />


                </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:text="@string/phone_number_profile"
                        android:textColor="@color/orange_btn"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/PA_phone_number_TV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:gravity="end"
                        android:textColor="@color/profile_color"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:text="@string/birthday"
                        android:textColor="@color/orange_btn"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/PA_buirthday_TV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:gravity="end"
                        android:text="@string/empty"
                        android:textColor="@color/profile_color"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:text="@string/community"
                        android:textColor="@color/orange_btn"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/PA_community_TV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:gravity="end"
                        android:text="@string/empty"
                        android:textColor="@color/profile_color"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:text="@string/religious_level"
                        android:textColor="@color/orange_btn"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/PA_religious_level_TV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:gravity="end"
                        android:textColor="@color/profile_color"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:text="@string/education"
                        android:textColor="@color/orange_btn"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/PA_education_TV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:gravity="end"
                        android:text="@string/empty"
                        android:textColor="@color/profile_color"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:text="@string/occupation"
                        android:textColor="@color/orange_btn"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/PA_occupation_TV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:gravity="end"
                        android:textColor="@color/profile_color"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="25dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:text="@string/second_email"
                        android:textColor="@color/orange_btn"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/PA_second_email_TV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:gravity="end"
                        android:text="@string/empty"
                        android:textColor="@color/profile_color"
                        android:textSize="15sp" />


                </LinearLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/PA_topic_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"
android:textStyle="normal"
                    android:maxLines="1"
                    android:text="@string/topic"
                    android:textColor="@color/bottom_nevi_blue"
                    android:textSize="16sp"
                    app:autoSizeTextType="uniform"

                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/PA_recycler_RV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>


                <Button
                    android:id="@+id/PA_log_out_btn"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/blue_button_rounded"
                    android:text="@string/log_out"
                    android:textColor="@color/color_white"
                    android:textSize="15sp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/PA_change_pass_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:fontFamily="sans-serif"
android:textStyle="normal"
                    android:maxLines="1"
                    android:text="@string/change_password"
                    android:textColor="@color/jabrutouch_blue"
                    android:textSize="15sp"
                    app:autoSizeTextType="uniform"

                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/PA_remove_account_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="sans-serif"
android:textStyle="normal"
                    android:maxLines="1"
                    android:text="@string/remove_account"
                    android:textColor="@color/jabrutouch_blue"
                    android:textSize="15sp"
                    app:autoSizeTextType="uniform"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:text="@string/version"
                        android:textColor="@color/profile_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/AP_version_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
android:textStyle="normal"
                        android:textColor="@color/profile_color"
                        android:textSize="15sp"
                        tools:text="2.5.5" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/PA_back_arrow_IV"
                android:layout_width="50dp"
                android:layout_height="30dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_blue_arrow" />

            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/PA_user_image_CIV"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/new_profile_image"

                />

            <ProgressBar
                android:id="@+id/PA_image_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/jabrutouch_blue"
                android:maxWidth="50dp"
                android:maxHeight="50dp"
                android:minWidth="50dp"
                android:minHeight="50dp"
                android:visibility="gone"

                />


            <LinearLayout
                android:id="@+id/PA_edit_btn_ACTV"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp"
                android:gravity="end">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
android:textStyle="normal"
                    android:maxLines="1"
                    android:text="@string/edit"
                    android:textColor="@color/bottom_nevi_blue"
                    android:textSize="19.2sp"
                    android:visibility="visible"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>


        </RelativeLayout>


        <ProgressBar
            android:id="@+id/PA_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/jabrutouch_blue"
            android:maxWidth="50dp"
            android:maxHeight="50dp"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:visibility="gone"

            />

    </RelativeLayout>


</ScrollView>