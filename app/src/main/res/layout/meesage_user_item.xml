<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="20dp"
    android:background="@color/jabrutouch_background"
    android:gravity="end"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:gravity="end"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="210dp"
            android:gravity="end"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/rounded_shadow_user_blue"
                >


                <TextView
                    android:id="@+id/MUI_message_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="13sp"
                    android:paddingEnd="7dp"
                    android:autoLink="web"
                    android:textColorLink="@color/check_box_color"
                    tools:text="hi, whats up\n asdasd\nasd"
                    android:textColor="@color/color_white" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3.7dp"
                android:background="@drawable/ic_message_pointer"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="7dp"/>

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_marginBottom="7dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/MUI_user_image_IV"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerInParent="true"
                android:background="@drawable/new_profile_image">

            </de.hdodenhof.circleimageview.CircleImageView>

            <ProgressBar
                android:id="@+id/MI_image_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:indeterminate="true"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/jabrutouch_blue"
                android:maxWidth="30dp"
                android:maxHeight="30dp"
                android:minWidth="30dp"
                android:minHeight="30dp"
                android:visibility="gone"

                />

        </RelativeLayout>




    </LinearLayout>


    <TextView
        android:id="@+id/MUI_message_time_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textSize="12sp"
        android:layout_marginEnd="70dp"
        tools:text="16:26" />


</LinearLayout>