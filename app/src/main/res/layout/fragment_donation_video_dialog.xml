<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/FDVD_all_view_RL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blur_back"
        android:paddingBottom="20dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp">


        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:id="@+id/FDVD_video_relative_RL"
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/round_donate_video"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:corner_radius="16dp">


            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/DDV_video_view_EPV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:use_controller="false" />


            <ImageView
                android:id="@+id/DDV_play_btn_IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/round_play" />

        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FDVD_video_relative_RL"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/DDV_skip_btn_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="sans-serif"
android:textStyle="normal"
                android:text="@string/skip"
                android:textColor="@color/color_white"
                android:textSize="18sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/arrow_white" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>