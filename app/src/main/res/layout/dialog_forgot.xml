<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="411dp"
    android:layout_gravity="center"
    android:background="@drawable/rounded_corner_dialog"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="411">


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20" />

        <LinearLayout
            android:id="@+id/LOD_close_btn"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="35">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_close_24dp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="45"
            android:fontFamily="sans-serif"
android:textStyle="bold"
            android:maxLines="1"
            android:text="@string/recupera"
            android:textColor="@color/sign_in_color"
            android:textSize="25sp"
            app:autoSizeTextType="uniform" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="36" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="58"
            android:fontFamily="sans-serif"
android:textStyle="normal"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/send_pass"
            android:textColor="@color/sign_in_color"
            android:textSize="20sp"
            app:autoSizeTextType="uniform" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30" />

        <EditText
            android:id="@+id/FD_edit_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="63"
            android:background="@drawable/rounded_shadow"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:paddingEnd="15dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20" />


        <Button
            android:id="@+id/FD_send_now_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="56"
            android:background="@drawable/blue_button_rounded"
            android:text="@string/enviar"
            android:textColor="@color/color_white"
            android:textSize="15sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15" />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/FD_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/jabrutouch_blue"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:visibility="gone" />


</RelativeLayout>