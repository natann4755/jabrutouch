<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jabrutouch_background"
    tools:context=".ui.main.profile_screen.ProfileActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/PA_user_image_CIV"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-15dp"
            android:background="@drawable/custom_profile"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/PA_User_name_TV"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:layout_weight="2.8"
                android:fontFamily="sans-serif"
android:textStyle="bold"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/profile_color"
                android:textSize="24sp"
                app:autoSizeTextType="uniform" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
android:textStyle="normal"
                    android:text="@string/phone_number"
                    android:textColor="@color/orange_btn"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/PA_phone_number_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
android:textStyle="normal"
                    android:gravity="end"
                    android:textColor="@color/profile_color"
                    android:textSize="15sp" />


            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/PA_User_mail_TV"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:fontFamily="sans-serif"
android:textStyle="bold"
                android:maxLines="1"
                android:gravity="center"
                android:textColor="@color/bottom_nevi_blue"
                android:textSize="18sp"
                app:autoSizeTextType="uniform"
                tools:ignore="Suspicious0dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="238dp"
                android:layout_weight="1.3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/PA_location_image_IV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_location" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/PA_User_location_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
android:textStyle="normal"
                    android:maxLines="1"
                    android:textColor="@color/orange_btn"
                    android:textSize="16sp"
                    app:autoSizeTextType="uniform" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/version"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif"
android:textStyle="normal"
                    android:textColor="@color/profile_color"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:fontFamily="sans-serif"
android:textStyle="normal"
                    android:id="@+id/AP_version_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/profile_color"
                    android:textSize="15sp"
                    tools:text="2.5.5"/>

            </LinearLayout>


            <Button
                android:id="@+id/PA_log_out_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="34dp"
                android:layout_weight="6.5"
                android:background="@drawable/blue_button_rounded"
                android:text="@string/log_out"
                android:textColor="@color/color_white"
                android:textSize="15sp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/PA_back_arrow_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_blue_arrow" />


        <ImageView
            android:id="@+id/PA_user_image_CIV"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/new_profile_image" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:fontFamily="sans-serif"
android:textStyle="normal"
            android:maxLines="1"
            android:text="@string/edit"
            android:textColor="@color/bottom_nevi_blue"
            android:textSize="19.2sp"
            android:visibility="gone"
            app:autoSizeTextType="uniform" />


    </RelativeLayout>


    <ProgressBar
        android:id="@+id/PA_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/jabrutouch_blue"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:visibility="gone"

        />


</RelativeLayout>
